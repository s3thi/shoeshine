{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "typography": {
      "customFontSize": false,
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system-font"
        },
        {
          "fontFamily": "Lora,ui-serif,Georgia,Cambria,'Times New Roman',Times,serif",
          "name": "Lora",
          "slug": "lora",
          "fontFace": [
            {
              "fontFamily": "Lora",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-VariableFont_wght.ttf"]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "400 700",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-Italic-VariableFont_wght.ttf"]
            }
          ]
        },
        {
          "fontFamily": "'Libre Franklin',ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,'Noto Sans',sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol','Noto Color Emoji'",
          "name": "Libre Franklin",
          "slug": "libre-franklin",
          "fontFace": [
            {
              "fontFamily": "Libre Franklin",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/LibreFranklin-VariableFont_wght.ttf"]
            },
            {
              "fontFamily": "Libre Franklin",
              "fontWeight": "400 700",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/LibreFranklin-Italic-VariableFont_wght.ttf"
              ]
            }
          ]
        },
        {
          "fontFamily": "'Fira Code',ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,'Liberation Mono','Courier New',monospace",
          "name": "Fira Code",
          "slug": "fira-code",
          "fontFace": [
            {
              "fontFamily": "Fira Code",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/FiraCode-VF.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "xx-small",
          "name": "XX Small",
          "size": "0.563rem",
          "fluid": {
            "min": "0.422rem",
            "max": "0.563rem"
          }
        },
        {
          "slug": "x-small",
          "name": "X Small",
          "size": "0.75rem",
          "fluid": {
            "min": "0.563rem",
            "max": "0.75rem"
          }
        },
        {
          "slug": "small",
          "name": "Small",
          "size": "1rem",
          "fluid": {
            "min": "0.75rem",
            "max": "1rem"
          }
        },
        {
          "slug": "medium",
          "name": "Medium",
          "size": "1.333rem",
          "fluid": {
            "min": "1rem",
            "max": "1.333rem"
          }
        },
        {
          "slug": "large",
          "name": "Large",
          "size": "1.777rem",
          "fluid": {
            "min": "1.333rem",
            "max": "1.777rem"
          }
        },
        {
          "slug": "x-large",
          "name": "X Large",
          "size": "2.369rem",
          "fluid": {
            "min": "1.777rem",
            "max": "2.369rem"
          }
        },
        {
          "slug": "xx-large",
          "name": "XX Large",
          "size": "3.157rem",
          "fluid": {
            "min": "2.369rem",
            "max": "3.157rem"
          }
        },
        {
          "slug": "xxx-large",
          "name": "XXX Large",
          "size": "4.209rem",
          "fluid": {
            "min": "3.157rem",
            "max": "4.209rem"
          }
        }
      ]
    },
    "color": {
      "palette": [
        {
          "slug": "foreground",
          "color": "#374151",
          "name": "Foreground"
        },
        {
          "slug": "foreground-dark",
          "color": "#000000",
          "name": "Foreground (Dark)"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        },
        {
          "slug": "primary",
          "color": "#7C3AED",
          "name": "Primary"
        },
        {
          "slug": "primary-light",
          "color": "#BD9CF6",
          "name": "Primary Light"
        },
        {
          "slug": "primary-dark",
          "color": "#5b21b6",
          "name": "Primary Dark"
        },
        {
          "slug": "tertiary",
          "color": "#4B5563",
          "name": "Tertiary"
        }
      ]
    },
    "layout": {
      "contentSize": "48rem",
      "wideSize": "64rem"
    },
    "custom": {
      "typography": {
        "line-height": {
          "none": "1",
          "tight": "1.25",
          "snug": "1.375",
          "normal": "1.5",
          "relaxed": "1.625",
          "loose": "2"
        },
        "text-decoration": {
          "thickness": {
            "normal": "0.25ch"
          },
          "offset": {
            "normal": "0.25ch"
          }
        }
      },
      "spacing": {
        "2-x-small": "0.25rem",
        "x-small": "0.5rem",
        "small": "0.625rem",
        "medium": "1rem",
        "large": "1.5rem",
        "x-large": "2rem",
        "2-x-large": "2.5rem",
        "3-x-large": "3rem",
        "4-x-large": "3.5rem",
        "5-x-large": "4rem",
        "6-x-large": "4.5rem",
        "7-x-large": "5rem",
        "8-x-large": "6rem"
      },
      "border": {
        "radius": {
          "medium": "4px"
        }
      }
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lora)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "var(--wp--custom--typography--line-height--relaxed)"
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "spacing": {
      "padding": {
        "top": "var(--wp--custom--spacing--x-large)",
        "left": "var(--wp--custom--spacing--medium)",
        "bottom": "var(--wp--custom--spacing--x-large)",
        "right": "var(--wp--custom--spacing--medium)"
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--large)",
            "left": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "right": "0"
          }
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--large)",
            "left": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "right": "0"
          }
        }
      },
      "core/post-title": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--x-large)",
            "left": "0",
            "bottom": "var(--wp--custom--spacing--small)",
            "right": "0"
          }
        }
      },
      "core/quote": {
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--large)",
            "left": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "right": "0"
          }
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--fira-code)"
        },
        "color": {
          "background": "var(--wp--preset--color--tertiary)",
          "text": "white"
        }
      }
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
          "fontWeight": "700"
        }
      },
      "h1": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--snug)",
          "fontSize": "var(--wp--preset--font-size--xxx-large)"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--5-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--x-large)",
            "left": "0"
          }
        }
      },
      "h2": {
        "typography": {
          "lineHeight": "var(--wp--custom--preset--line-heigxxx--snug)",
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--5-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "left": "0"
          }
        }
      },
      "h3": {
        "typography": {
          "lineHeight": "var(--wp--custom--preset--line-heightxxxnormal)",
          "fontSize": "var(--wp--preset--font-size--x-large)"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--5-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "left": "0"
          }
        }
      },
      "h4": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--relaxed)",
          "fontSize": "var(--wp--preset--font-size--large)"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--3-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "left": "0"
          }
        }
      },
      "h5": {
        "typography": {
          "lineHeight": "var(--wp--custom--preset--line-height-xxxelaxed)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--3-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "left": "0"
          }
        }
      },
      "h6": {
        "typography": {
          "lineHeight": "var(--wp--custom--preset--line-height-xxxelaxed)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "400"
        },
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--custom--spacing--3-x-large)",
            "right": "0",
            "bottom": "var(--wp--custom--spacing--large)",
            "left": "0"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--foreground-dark)"
        }
      },
      "button": {
        "border": {
          "radius": "var(--wp--custom--border--radius--medium)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--custom--spacing--small)",
            "left": "var(--wp--custom--spacing--medium)",
            "bottom": "var(--wp--custom--spacing--small)",
            "right": "var(--wp--custom--spacing--medium)"
          }
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "not-found",
      "title": "Not Found",
      "area": "uncategorized"
    }
  ]
}
