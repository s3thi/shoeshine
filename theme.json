{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "typography": {
      "customFontSize": false,
      "dropCap": false,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "name": "System Font",
          "slug": "system-font"
        },
        {
          "fontFamily": "Lora,ui-serif,Georgia,Cambria,'Times New Roman',Times,serif",
          "name": "Lora",
          "slug": "lora",
          "fontFace": [
            {
              "fontFamily": "Lora",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-VariableFont_wght.ttf"]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "400 700",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/Lora-Italic-VariableFont_wght.ttf"]
            }
          ]
        },
        {
          "fontFamily": "'Libre Franklin',ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,'Noto Sans',sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol','Noto Color Emoji'",
          "name": "Libre Franklin",
          "slug": "libre-franklin",
          "fontFace": [
            {
              "fontFamily": "Libre Franklin",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/LibreFranklin-VariableFont_wght.ttf"]
            },
            {
              "fontFamily": "Libre Franklin",
              "fontWeight": "400 700",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/LibreFranklin-Italic-VariableFont_wght.ttf"
              ]
            }
          ]
        },
        {
          "fontFamily": "'Fira Code',ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,'Liberation Mono','Courier New',monospace",
          "name": "Fira Code",
          "slug": "fira-code",
          "fontFace": [
            {
              "fontFamily": "Fira Code",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:./assets/fonts/FiraCode-VF.ttf"]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "name": "Small",
          "size": "1rem",
          "fluid": {
            "min": "0.75rem",
            "max": "1rem"
          }
        },
        {
          "slug": "medium",
          "name": "Medium",
          "size": "1.25rem",
          "fluid": {
            "min": "1rem",
            "max": "1.25rem"
          }
        },
        {
          "slug": "large",
          "name": "Large",
          "size": "1.75rem",
          "fluid": {
            "min": "1.5rem",
            "max": "1.75rem"
          }
        },
        {
          "slug": "x-large",
          "name": "X Large",
          "size": "2.25rem",
          "fluid": {
            "min": "2rem",
            "max": "2.25rem"
          }
        },
        {
          "slug": "xx-large",
          "name": "XX Large",
          "size": "3.75rem",
          "fluid": {
            "min": "2.5rem",
            "max": "3.75rem"
          }
        },
        {
          "slug": "xxx-large",
          "name": "XXX Large",
          "size": "4.5rem",
          "fluid": {
            "min": "4rem",
            "max": "4.5rem"
          }
        }
      ]
    },
    "useRootPaddingAwareAlignments": true,
    "color": {
      "palette": [
        {
          "slug": "base",
          "color": "#374151",
          "name": "Base"
        },
        {
          "slug": "base-dark",
          "color": "#000000",
          "name": "Base Dark"
        },
        {
          "slug": "contrast",
          "color": "#ffffff",
          "name": "Contrast"
        },
        {
          "slug": "primary",
          "color": "#7C3AED",
          "name": "Primary"
        },
        {
          "slug": "primary-light",
          "color": "#a78bfa",
          "name": "Primary Light"
        },
        {
          "slug": "primary-dark",
          "color": "#5b21b6",
          "name": "Primary Dark"
        },
        {
          "slug": "secondary",
          "color": "#db2777",
          "name": "Secondary"
        },
        {
          "slug": "secondary-ultralight",
          "color": "#fbcfe8",
          "name": "Secondary Ultralight"
        }
      ]
    },
    "layout": {
      "contentSize": "45rem",
      "wideSize": "75rem"
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "size": "0.5rem",
          "slug": "10",
          "name": "1"
        },
        {
          "size": "1rem",
          "slug": "20",
          "name": "2"
        },
        {
          "size": "clamp(1.5rem, 5vw, 2rem)",
          "slug": "30",
          "name": "3"
        },
        {
          "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
          "slug": "40",
          "name": "4"
        },
        {
          "size": "clamp(2.5rem, 8vw, 4.5rem)",
          "slug": "50",
          "name": "5"
        },
        {
          "size": "clamp(3.75rem, 10vw, 7rem)",
          "slug": "60",
          "name": "6"
        },
        {
          "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
          "slug": "70",
          "name": "7"
        },
        {
          "size": "clamp(7rem, 14vw, 11rem)",
          "slug": "80",
          "name": "8"
        }
      ],
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "custom": {
      "typography": {
        "line-height": {
          "none": "1",
          "tight": "1.25",
          "snug": "1.375",
          "normal": "1.5",
          "relaxed": "1.625",
          "loose": "2"
        },
        "text-decoration": {
          "thickness": {
            "normal": "0.25ch"
          },
          "offset": {
            "normal": "0.25ch"
          }
        }
      },
      "border": {
        "radius": {
          "medium": "4px"
        }
      }
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lora)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "var(--wp--custom--typography--line-height--relaxed)"
    },
    "color": {
      "background": "var(--wp--preset--color--contrast)",
      "text": "var(--wp--preset--color--base)"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--30)",
      "padding": {
        "top": "0",
        "right": "var(--wp--preset--spacing--30)",
        "bottom": "0",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "blocks": {
      "core/post-date": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--primary-light)"
        },
        "elements": {
          "cite": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--small)",
              "fontStyle": "italic"
            }
          }
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
          "fontWeight": "700"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--fira-code)"
        },
        "color": {
          "background": "var(--wp--preset--color--base)",
          "text": "var(--wp--preset--color--contrast)"
        }
      }
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
          "fontWeight": "700"
        },
        "color": {
          "text": "var(--wp--preset--color--base-dark)"
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--50)"
          }
        }
      },
      "h1": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--snug)",
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      },
      "h2": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--snug)",
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h3": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--normal)",
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h4": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--relaxed)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h5": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--relaxed)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "400"
        }
      },
      "h6": {
        "typography": {
          "lineHeight": "var(--wp--custom--typography--line-height--relaxed)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "400"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--base-dark)"
        }
      },
      "button": {
        "border": {
          "radius": "var(--wp--custom--border--radius--medium)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--libre-franklin)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "500"
        },
        "spacing": {
          "padding": {
            "top": "var(--wp--preset--spacing--10)",
            "left": "var(--wp--preset--spacing--20)",
            "bottom": "var(--wp--preset--spacing--10)",
            "right": "var(--wp--preset--spacing--20)"
          }
        },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--contrast)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "blank",
      "title": "Blank",
      "postTypes": ["page", "post"]
    },
    {
      "name": "404",
      "postTypes": ["page"],
      "title": "404"
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "not-found",
      "title": "Not Found",
      "area": "uncategorized"
    }
  ]
}
